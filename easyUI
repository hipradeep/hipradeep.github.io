    <script>
    $(document).ready(function(){
        // Array to track visited tabs
        const visitedTabs = [];
        
        // Initialize the tabs
        $('#tt').tabs({
            onSelect: function(title, index) {
                // Check if we've already visited this tab
                if (visitedTabs.includes(index)) {
                    // Show alert for revisited tab
                    $.messager.alert('Tab Visit Notice', 'You have already visited the ' + title + ' tab.', 'info');
                } else {
                    // Add to visited tabs
                    visitedTabs.push(index);
                    
                    // Optional: Show a different message for first visit
                    // $.messager.alert('Welcome', 'First time visiting ' + title, 'info');
                }
            }
        });
        
        // Add a button to reset visited tabs for demonstration
        $('.header').append(
            '<div style="margin-top:10px;">' +
            '<a href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:\'icon-reload\'" onclick="resetVisitedTabs()">Reset Visited Tabs</a>' +
            '</div>'
        );
    });
    
    // Function to reset visited tabs (for demonstration)
    function resetVisitedTabs() {
        visitedTabs.length = 0;
        $.messager.alert('Reset Complete', 'The visited tabs history has been cleared.', 'info');
    }
    </script>
